{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "outDir": "lib",
    "declaration": true,
    "skipLibCheck": true,
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules"]
}
